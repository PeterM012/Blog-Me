<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">New Post</button>
</section>


{{#if posts.length}}
<section>
    <h2>Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit existing post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/public/js/create.js"></script>